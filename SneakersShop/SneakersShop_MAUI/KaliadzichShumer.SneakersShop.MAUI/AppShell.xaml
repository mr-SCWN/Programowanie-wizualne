<?xml version="1.0" encoding="UTF-8"?>
<Shell 
    x:Class="KaliadzichShumer.SneakersShop.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:KaliadzichShumer.SneakersShop.MAUI.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="SneakersShop MAUI">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Producers"
        ContentTemplate="{DataTemplate local:ProducersPage}"
        Route="ProducersPage" />

    <ShellContent
        Title="Products"
        ContentTemplate="{DataTemplate local:ProductsPage}"
        Route="ProductsPage" />
</Shell>
