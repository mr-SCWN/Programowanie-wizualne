<Window x:Class="KaliadzichShumer.SneakersShop.UI.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:KaliadzichShumer.SneakersShop.UI.WPF.ViewModels"
        Title="Sneakers Shop" Height="400" Width="600">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Manufacturers:" FontWeight="Bold"/>
            <ListBox ItemsSource="{Binding Manufacturers}" 
                     DisplayMemberPath="Name" Height="80"/>

            <TextBlock Text="Sneakers:" FontWeight="Bold" Margin="0,10,0,0"/>
            <ListBox ItemsSource="{Binding Sneakers}" 
                     DisplayMemberPath="ModelName" Height="80"/>

            <Button Content="Refresh" Command="{Binding RefreshCommand}" Margin="0,10,0,0" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
